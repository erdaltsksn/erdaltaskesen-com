  "homepage": "https://github.com/erdaltsksn/erdaltaskesen-com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erdaltsksn/erdaltaskesen-com.git"
  },
  "bugs": {
    "url": "https://github.com/erdaltsksn/erdaltaskesen-com/issues"
